<p>コメント件数：<%= ramen.post_comments.count %></p>
    <% ramen.post_comments.each do |post_comment| %>
      <p><%= attachment_image_tag post_comment.user, :profile_image,size: "50x50", fallback: "no_image.jpg" %></p>
      <%= post_comment.user.name %>
      <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
      <div class="star-group">
        <!--<div class="detail-value", id="star-rate-<%#= post_comment.id %>"></div>-->
        <div class="eval-star"><%= post_comment.rate %>/5点</div>
      </div>
      <% if post_comment.user == current_user %>
        <div>
          <%= link_to "削除", ramen_post_comment_path(post_comment.ramen, post_comment), method: :delete, remote: true %>
        </div>
      <% end %>
    <% end %>

<script>
  $('#star-rate-<%= post_comment.id %>').raty({
    size: 38,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    half: true,
    readOnly: true,　　　　　　　　　　//readOnlyオプションで読み込み専用とする。編集できない。
    score: <%= post_comment.rate %>,　//評価内容を取得
  });
</script>