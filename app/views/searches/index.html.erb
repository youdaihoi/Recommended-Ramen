<div class = "container-fluid background">
  <div class="row">
    <div class='col-md-3'>
      <table class="table table-bordered mx-2 mt-5">
        <div class='col-md-4'>
          <%= render 'layouts/category_table', categories: @categories %>
        </div>
      </table>
    </div>
    <div class='col-md-9'>
      <h1 class = "my-3">検索結果</h1>
      <% if @ramens.size == 0 %>
       <p>検索結果がありませんでした</p>
      <% end %>
      <div class = "card-list-container py-3 d-flex flex-wrap">
        <% @ramens.each do |ramen| %>
        <div class="card shadow-lg mb-5 mr-4" style="width: 20rem;">
          <%=link_to  ramen_path(ramen) do %>
          <%= attachment_image_tag ramen, :image ,size: '200x200',class: "card-img-top";%>
          <% end %>
          <div class = "card-body">
            <div class = "row">
              <div class = "col-3">
                <%= attachment_image_tag ramen.user, :profile_image, :fill, 55, 55, class: "rounded-circle",format: 'jpeg', fallback: "no_image.jpg", class: "rounded-circle" %></p>
              </div>
              <div class="card-title col-9">
                <%= ramen.prefecture.name %><%= ramen.city %><%= ramen.street %></br>
                <%= link_to "#{ramen.post_comments.count} コメント", ramen_path(ramen.id),class: "link-color" %>
                　<i class="far fa-heart"></i><%= ramen.favorites.count %> おすすめ
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <% paginate @ramens %>
  </div>
</div>