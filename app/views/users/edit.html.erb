<div class="container-fluid background">
  <div class="row justify-content-center ">
    <h4 class="mt-3">プロフィール編集</h4>
  </div>
  <div class="row justify-content-center">
    <% if @user.errors.any? %>
      <font color="red">名前を入力してください</font>
    <% end %>
  </div>
    <div class="row justify-content-center">
      <%= form_with model: @user,local: true do |f| %>
      <table class="mb-5">
        <tr>
          <div class="form-group">
            <th><%= f.label :ユーザー名　%></th>
            <th><%= f.text_field :name, size: "40" %></th>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th><%= f.label :プロフィール画像 %></th>
            <th><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></th>
            <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "rounded-circle", fallback: "no_image.jpg", size: "60" %></th>
        </tr>
      </table>

      <div class="form-action row justify-content-center">
        <p><%= f.submit "変更を保存", class:"btn btn-success " %></p>
      </div>
     <% end %>
    </div>
</div>