<div class = "container-fluid background">
  <div class="row">
    <div class='col-md-3'>
      <table class="table table-bordered mx-2 mt-5">
        <div class='col-md-4'>
          <%= render 'layouts/category_table', categories: @categories %>
        </div>
      </table>
    </div>
    <div class='col-md-8'>
      <h1 class = "my-3">ラーメン一覧</h1>
      <div class = "card-list-container py-3">
        <% @ramens.each do |ramen| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
         <%=link_to  ramen_path(ramen) do %>
          <%= attachment_image_tag ramen, :image ,class:"card-img-top";%>
         <% end %>
          <div class = "card-body">
            <div class = "row">
              <p class = "card-title">
                <%= ramen.shop_name %></br>
                <%= ramen.prefecture.name %><%= ramen.city %><%= ramen.street %></br>
                #<%= ramen.category.name %>
                <%= ramen.parking_lot_i18n %>
                <%= link_to "#{ramen.post_comments.count} コメント", ramen_path(ramen.id) %>
              </p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>