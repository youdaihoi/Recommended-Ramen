<div class="container-fluid background">
  <div class="row">
    <div class="col-md-8 mt-5">
      <h4 class="col-md-6 text-center"><span class="title font-weight-bold">ログイン</span></h4>
    </div>
  </div>
  <div class="row">
    <div class='mx-auto col-md-12 mt-3'>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <%= f.label "名前", class: "col-md-4 col-form-label text-center" %>
          <%= f.text_field :name, autofocus: true, class: "form-control col-md-6" %>
        </div>

        <div class="form-group row">
          <%= f.label :password, "パスワード(6文字以上)", class: "col-md-4 col-form-label text-center" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-md-6" %>
        </div>

        <div class="action ml-3 mb-5">
          <%= f.submit "ログイン", class: "btn btn-success col-md-3 offset-md-4 mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

